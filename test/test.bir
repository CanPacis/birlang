use "std:util"
use "std:io"

uint16encoder:verb [n] {
  init {
    let index = 0
    const buffer = 1000000

    for 10 as i {
      [Write buffer + i, i + 48]
    }
  }

  switch verb {
    case util.write {
      for n log as i {
        let value = {n / {10^i}} % 10
        index++
        [Write n log - 1 - index, value]
      }
    }
    case util.read {
      return [Read buffer + [Read n]]
    }
    case util.size {
      return index
    }
    default {
      throw util.unknown
    }
  }
}